<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/btn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="类别："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/live_indent_manage_type"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="总价："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/live_indent_manage_price"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:text="700元"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="入住时间："
            android:textSize="16sp" />

        <!--        <TextView-->
        <!--            android:id="@+id/live_in_time"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="30dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:layout_weight="3"-->
        <!--            android:paddingLeft="10dp"-->
        <!--            android:textColor="#000000"-->
        <!--            android:textSize="18sp" />-->
        <TextView
            android:id="@+id/live_indent_manage_in_time"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="退房时间："
            android:textSize="16sp" />

        <!--        <TextView-->
        <!--            android:id="@+id/live_out_time"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="30dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:layout_weight="3"-->
        <!--            android:paddingLeft="10dp"-->
        <!--            android:textColor="#000000"-->
        <!--            android:textSize="18sp" />-->
        <TextView
            android:id="@+id/live_indent_manage_out_time"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下单时间："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/live_indent_manage_time"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/live_indent_manage_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_worring"
        android:text="撤销订单"
        android:textColor="#ffffff"
        android:textSize="25sp" />
</LinearLayout>